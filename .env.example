# Agent Communication Configuration
# Copy this file to .env and update with your actual values

# Messaging Backend Configuration
# Options: redis, rabbitmq
MESSAGING_BACKEND=redis

# Redis Configuration (if using Redis backend)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# RabbitMQ Configuration (if using RabbitMQ backend)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=agent_messages
RABBITMQ_EXCHANGE_TYPE=topic

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
# Options: console, file, both
LOG_OUTPUT=console
LOG_FILE_PATH=logs/agent_communication.log

# Application Settings
APP_ENV=development
DEBUG=false

# Agent Settings
AGENT_HEARTBEAT_INTERVAL=30
AGENT_MESSAGE_TIMEOUT=60
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# Performance Settings
MESSAGE_BATCH_SIZE=100
MAX_CONCURRENT_MESSAGES=10

# Security Settings (for future use)
ENABLE_MESSAGE_ENCRYPTION=false
ENCRYPTION_KEY=
MESSAGE_SIGNING=false
